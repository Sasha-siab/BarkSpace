<div id="wrapper">
  <div id="feed">

<% for (var i = 0; i < rows.length ; i++) { %>
  <% let data = rows[i].dataValues %>
  <div class="post" data-postID=<%= data.id %> >

    <div class="postHead">

      <img src=<%= '.'+data.profilepic %> class="user_pic">
      <h4 class="info"><span class="username"><%= data.username %></span><span class="date-created"><%= data.createdAt %></span></h4>

    <%  if (tempLogin.length>0) { %>

      <form action='/edit' method='post'>
        <button type="submit" class="editForm" name="postid" value=<%= data.id %> >Edit</button>
      </form>
      <form action='/delete' method='post'>
        <button type="submit" class="deleteForm" name="postid" value=<%= data.id %> >Delete</button>
      </form>

    <% } %>

    </div>

    <div class="postBody">
      <img src=<%= "../images/posts/" + data.postpic %> class="post_pic">
    </div>

    <div class="postFooter">



      <form action='/like' method='post' class="userDisable">
        <div class="likesContainer" data-likes=<%= data.likes %>>
        <img src="../images/assets/like.svg" class="like_pic">
          <button type="submit" class="likeBtn" name="postid" data-postID=<%= data.id %> ><%= data.likes %> likes</button>
        </div>
      </form>


      <div class="description"><p><%= data.description %></p></div>
      <hr/>
      <div class="commentLink"><a href=<%= `../comments/${data.id}` %> >See Comments</a></div>

      <form action="/comment" method="post" class="userDisable">
       <div class="commentsContainer">
         <textarea placeholder="Type your comment..." class="commentBod" name="content"></textarea>
         <input name="postid" value=<%= data.id %> style="display:none" />
         <button type="submit" class="commentBtn">Submit</button>
       </div>
      </form>


    </div>

    <hr/>

    </div>

    <% } %>

  </div>
</div>
